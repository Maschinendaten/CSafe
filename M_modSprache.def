Option Compare Database
Option Explicit
Public GloLA As String




Function LA(sText As String, Optional sTextKey As String) As String
Dim Rs1 As DAO.Recordset

'die Funktion dient zum umschalten der Sprache
'Der sText dient gleichzeitig als Schlüssel für die Übersetzung sText muss immer der deutsche sein
'Wenn die Sprache english ist wird der Englishe Text zurück zu geben

'Wenn sTextKey einen Wert enthält ist das das Suchkriterium sTextKey der übergebene Text ist immer in deutsch
'Wenn ein Text nicht besteht wird er angelegt

'On Error GoTo Err_

GloLA = funLadeReg("Sprache", "Wert", "")
If Nz(sTextKey, "") = "" Then
    Set Rs1 = CurrentDb.OpenRecordset("SELECT * FROM t_LiSprache WHERE textDE ='" & sText & "'")
Else
    Set Rs1 = CurrentDb.OpenRecordset("SELECT * FROM t_LiSprache WHERE TextKey ='" & sTextKey & "'")
End If

If Rs1.EOF Then 'Schlüssel wurde nicht gefunden
    Rs1.AddNew
    Rs1!TextKey = Nz(sTextKey)
    Rs1!textDE = Nz(sText)
    Rs1.Update
    LA = sText
Else
    
    If GloLA = "EN" Then
        LA = Nz(Rs1!textEN)
        If LA = "" Then LA = Nz(Rs1!textDE)
        
    End If
    If GloLA = "DE" Then
        LA = Rs1!textDE
    End If
    
End If
        
Exit Function
Err_:
Resume Next

End Function





