    End If
    Case "f_GefaeAW"
        'Position des GefahrAW
        If funFormOpen("f_GefaeAW") Then
            Form_f_GefaeAW.SetFocus
            DoCmd.MoveSize Form_f_Analyse01.WindowWidth + Form_f_Analyse02.WindowWidth, 0, gloBreiteF3, Form_f_Analyse01.WindowHeight

